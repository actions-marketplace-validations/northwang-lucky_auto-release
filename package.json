{
  "name": "auto-release",
  "version": "0.0.0",
  "description": "Webhook calls of custom BOT that support DingTalk, Lark and WeCom",
  "main": "lib/main.js",
  "author": "northwang <69568203+northwang-lucky@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "watch:ncc": "ncc build --watch",
    "watch:tsc": "tsc --watch",
    "start": "node ./scripts/start.js",
    "test": "jest",
    "package": "ncc build --source-map --license licenses.txt",
    "build": "rimraf ./dist && pnpm format && tsc && pnpm package",
    "sv": "standard-version",
    "precommit": "node ./scripts/build-tip.js",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northwang-lucky/auto-release.git"
  },
  "keywords": [
    "actions",
    "release",
    "tag",
    "change log"
  ],
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@types/inquirer": "8.2.5",
    "@types/node": "18.11.0",
    "@types/request": "2.48.8",
    "@vercel/ncc": "0.31.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "inquirer": "8.2.5",
    "jest": "27.2.5",
    "js-yaml": "4.1.0",
    "prettier": "2.5.1",
    "rimraf": "4.1.2",
    "standard-version": "9.5.0",
    "typescript": "4.4.4"
  }
}
